<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.semi.lynk.function.db_management.model.dao.DbMapper">

    <insert id="insertinsurance">
        INSERT INTO productManage(product_category,product_no, product_name)
        VALUES (#{productCategory}, #{productNo}, #{productName})
    </insert>

    <select id="selectinsurance" resultType="com.semi.lynk.function.db_management.model.dto.ProductManageDTO">
        SELECT
            product_category AS productCategory,
            product_no AS productNo,
            product_name AS productName
        FROM
            productManage;
    </select>

    <delete id="deleteProduct" parameterType="String">
        DELETE
        FROM
            productManage
        WHERE
            product_no = #{productNo};
    </delete>




</mapper>